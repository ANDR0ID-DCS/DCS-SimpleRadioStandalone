<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-android33.0</TargetFramework>
        <!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
        <!-- <TargetFrameworks>$(TargetFrameworks);net7.0-tizen</TargetFrameworks> -->
        <OutputType>Exe</OutputType>
        <RootNamespace>Ciribob.DCS.SimpleRadio.Standalone.Mobile</RootNamespace>
        <UseMaui>true</UseMaui>
        <SingleProject>true</SingleProject>
        <ImplicitUsings>enable</ImplicitUsings>

        <!-- Display name -->
        <ApplicationTitle>DCS-SRS Mobile</ApplicationTitle>

        <!-- App Identifier -->
        <ApplicationId>Ciribob.DCS.SimpleRadio.Standalone.Mobile</ApplicationId>
        <ApplicationIdGuid>82700155-37b8-4746-b4f1-7fbf4450d489</ApplicationIdGuid>

        <!-- Versions -->
        <ApplicationDisplayVersion>1.0.0.5</ApplicationDisplayVersion>
        <!-- Must be a number - bump by one each time -->
        <ApplicationVersion>1</ApplicationVersion>
        <EmbedAssembliesIntoApk>true</EmbedAssembliesIntoApk>


        <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">31.0</SupportedOSPlatformVersion>


        <Company>DCS-SRS Mobile</Company>


        <Product>DCS-SRS Mobile</Product>


        <AssemblyVersion>1.0.0.5</AssemblyVersion>


        <FileVersion>1.0.0.5</FileVersion>

    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net8.0-android|AnyCPU'">
        <ApplicationTitle>DCSS-SRS Mobile</ApplicationTitle>
        <ApplicationId>Ciribob.DCS.SimpleRadio.Standalone.Mobile</ApplicationId>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net8.0-android|AnyCPU'">
        <ApplicationTitle>DCS-SRS Mobile</ApplicationTitle>
        <ApplicationId>Ciribob.DCS.SimpleRadio.Standalone.Mobile</ApplicationId>
        <AndroidPackageFormat>apk</AndroidPackageFormat>
        <RunAOTCompilation>true</RunAOTCompilation>
        <EnableLLVM>true</EnableLLVM>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <AndroidSupportedAbis>armeabi-v7a;arm64-v8a;x86_64</AndroidSupportedAbis>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <AndroidSupportedAbis>armeabi-v7a;arm64-v8a;x86_64</AndroidSupportedAbis>
      <AndroidPackageFormat>apk</AndroidPackageFormat>
      <AndroidEnableSGenConcurrent>true</AndroidEnableSGenConcurrent>
    </PropertyGroup>

    <ItemGroup>
        <!-- App Icon -->
        <MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg"
                  Color="#512BD4"/>

        <!-- Splash Screen -->
        <MauiSplashScreen Include="Resources\Splash\splash.svg" Color="Black" BaseSize="128,128"/>

        <!-- Images -->
        <MauiImage Include="Resources\Images\*"/>

        <!-- Custom Fonts -->
        <MauiFont Include="Resources\Fonts\*"/>

        <!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
        <MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)"/>
        <None Remove="Resources\Fonts\RobotoMono-VariableFont.ttf"/>
        <MauiFont Include="Resources\Fonts\RobotoMono-VariableFont.ttf">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </MauiFont>
        <None Remove="Resources\Raw\handheld-radio.json"/>
        <MauiAsset Include="Resources\Raw\handheld-radio.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </MauiAsset>
        <None Remove="Resources\Raw\multi-radio.json"/>
        <MauiAsset Include="Resources\Raw\multi-radio.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </MauiAsset>
    </ItemGroup>

